			<artifactId>otc-compiler</artifactId>
			<version>${otc.version}</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>otceditor</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
